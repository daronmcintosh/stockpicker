# DigitalOcean API Token
# Get it from: https://cloud.digitalocean.com/account/api/tokens
do_token = "your-digitalocean-api-token-here"

# Project name (used as prefix for all resources)
project_name = "stockpicker"

# Droplet configuration (smaller for dev)
droplet_size   = "s-1vcpu-2gb"  # 1 vCPU, 2GB RAM - sufficient for dev
droplet_region = "nyc1"          # Choose your preferred region
droplet_image  = "ubuntu-22-04-x64"

# SSH Key configuration
# Option 1: Use existing SSH key ID from DigitalOcean
# ssh_key_id = "12345678"

# Option 2: Provide public key content (will create new SSH key)
# ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABgQC..."

# Security settings (more relaxed for dev)
ssh_allowed_ips = ["0.0.0.0/0", "::/0"]

# For dev, you might want to expose ports directly for testing
expose_n8n_directly = false
expose_api_directly = false

# Additional tags (optional - beyond project_name and development)
# droplet_tags = ["dev", "testing"]

